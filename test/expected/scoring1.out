CREATE EXTENSION IF NOT EXISTS tapir;
SET tapir.log_scores = true;
SET enable_seqscan = off;
-- Create test table
CREATE TABLE scoring1_docs (
    id SERIAL PRIMARY KEY,
    content TEXT
);
