-- Bulk mode query 1: 'hello'
SELECT id, content, ROUND((content <@> to_bm25query('hello', 'scoring6_bulk_idx'))::numeric, 4) as score
FROM scoring6_bulk
ORDER BY content <@> to_bm25query('hello', 'scoring6_bulk_idx'), id;
