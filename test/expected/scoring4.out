-- Bulk mode query 1: 'goodbye'
SELECT id, content, ROUND((content <@> to_bm25query('goodbye', 'scoring4_bulk_idx'))::numeric, 4) as score
FROM scoring4_bulk
ORDER BY content <@> to_bm25query('goodbye', 'scoring4_bulk_idx'), id;
