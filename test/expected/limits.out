-- Test 1: Basic LIMIT functionality
-- Should detect and optimize for LIMIT 5
EXPLAIN (COSTS OFF)
SELECT title, content, content <@> to_bm25query('database', 'limit_test_idx') as score
FROM limit_test
ORDER BY 3
LIMIT 5;
